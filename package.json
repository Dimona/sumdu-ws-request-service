{
  "name": "sumdu-ws-request-service",
  "version": "0.0.1",
  "description": "SumDU workshop request-service",
  "author": "Dmytro Ieremenko",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "serverless:deploy": "npm run test && serverless deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.216.0",
    "@aws-sdk/lib-dynamodb": "^3.216.0",
    "@workshop/lib-nest-aws": "0.0.3",
    "@nestjs/common": "^9.2.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.0",
    "@nestjs/platform-express": "^9.2.0",
    "@typedorm/core": "^1.15.2",
    "@typedorm/common": "^1.15.2",
    "@typedorm/document-client": "^1.15.2",
    "@vendia/serverless-express": "^4.10.1",
    "aws-lambda": "^1.0.7",
    "cache-manager": "^5.1.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dynamo-types": "^2.10.1",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7",
    "serverless-webpack": "^5.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.2.0",
    "@types/aws-lambda": "^8.10.109",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/serverless": "^3.12.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "serverless": "^3.25.0",
    "serverless-offline": "^11.5.0",
    "serverless-plugin-typescript": "^2.1.4",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tsconfig-paths-jest": "^0.0.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "terser-webpack-plugin": "^5.3.6"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "modulePaths": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "setupFiles": [
      "./jest-setup-file.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "fixtures",
      "<rootDir>/node_modules",
      "<rootDir>/.build",
      "<rootDir>/.clinic",
      "<rootDir>/.serverless",
      "<rootDir>/coverage",
      "<rootDir>/gen",
      "<rootDir>/src/main.ts",
      "<rootDir>/src/index.ts",
      "<rootDir>/src/app/app.ts",
      "<rootDir>/src/docs",
      "<rootDir>/src/aws",
      "mocks",
      "interfaces",
      "types",
      "config",
      ".module.ts$",
      ".entity.ts$",
      ".aliases.ts$"
    ],
    "roots": [
      "<rootDir>/src/"
    ],
    "moduleNameMapper": {
      "^@app(|/.*)$": "<rootDir>/src/app/$1",
      "^@requests(|/.*)$": "<rootDir>/src/requests/$1"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "^16.16.0"
  }
}
